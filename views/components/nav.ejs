

<header class="p-3 mb-3">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
        <img src="img/urology.png" alt="logo" class="bi me-2" width="40" height="32" role="img">
    </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto justify-content-center ">
        <h2 class="text-primary mx-3">Kidney Stone Detection</h2>
        <li hidden><a href="#" class="nav-link px-2 link-secondary">Overview</a></li>
        <li hidden><a href="#" class="nav-link px-2 link-dark">Inventory</a></li>
        <li hidden><a href="#" class="nav-link px-2 link-dark">Customers</a></li>
        <li hidden><a href="#" class="nav-link px-2 link-dark">Products</a></li>
      </ul>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
        <input type="search" class="form-control" placeholder="Search..." aria-label="Search" hidden>
      </form>

      <div class="dropdown text-end">
        <% if (auth) { %>
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <% if (profile) { %>
              <img src="./<%= profile.image %>" alt="mdo" width="32" height="32" class="rounded-circle">
            <% } %>
          </a>
          <ul class="dropdown-menu text-small">
            <li><a class="dropdown-item" href="/">Home</a></li>
            <% if (auth.role == 'admin') { %>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/admin">Admin Panel</a></li>
            <% } %>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/editprofile">Profile</a></li>
            <% if (auth.role == 'user') { %>
              <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/history">History</a></li>
            <% } %>
            
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/logout">Sign out</a></li>
          </ul>
        <% } else {%>
          <a href="/signin" class="btn btn-primary">Sign in</a>
        <% } %>
      </div>
    </div>
  </div>
</header>