<% if (auth) { %>
    <div class="container d-flex justify-content-center align-item-center" >
        <div class="card border border-0">
            <div class="card-header bg-primary-subtle border border-0">
                <h1 class="text-primary text-center">Profile</h1>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <% if (profile) { %>
                        <img src="/<%= profile.image %> "alt="" width="100" height="100" style="border-radius: 50%;">
                    <% } else {%>
                        <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24"><path fill="#0d6efd" d="M12 19.2c-2.5 0-4.71-1.28-6-3.2c.03-2 4-3.1 6-3.1s5.97 1.1 6 3.1a7.232 7.232 0 0 1-6 3.2M12 5a3 3 0 0 1 3 3a3 3 0 0 1-3 3a3 3 0 0 1-3-3a3 3 0 0 1 3-3m0-3A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10c0-5.53-4.5-10-10-10Z"/></svg>
                        <% } %>
                    
                </div>
                <div class="card-subtitle mb-3 mt-2">
                    <h5 class="text-info-emphasis text-center">Personel Details</h5>
                </div>
               <form action="/updateprofile/<%= profile.id %>" method="post" enctype="multipart/form-data">
    
                <input type="text" hidden name="_id" value="<%= auth._id %>">
                <input type="text" hidden name="role" value="<%= auth.role %>">
                <input type="text" hidden name="email" value="<%= auth.email %>">
    
                <div class="form-floating mb-3">
                    <input type="text" class="form-control " id="floatingInput" name="username" value="<%= profile.username %>">
                    <label for="floatingInput" class="text-info-emphasis">Username</label>
                </div>
    
                <h6 class="text-info-emphasis">Gender</h6>
                <div class="input-group mb-3">
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input " type="radio" name="gender" id="male" value="male" <%= profile.gender == 'male' ? 'checked':'' %>>
                                <label class="form-check-label text-info-emphasis" for="male">
                                  Male
                                </label>
                              </div>
                        </div>
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input " type="radio" name="gender" id="female" value="female" <%= profile.gender == 'female' ? 'checked':'' %>>
                                <label class="form-check-label text-info-emphasis" for="female">
                                  Female
                                </label>
                              </div>
                        </div>
                    </div>
                </div>
    
                
                <div class="mb-3">
                    <h6 class="text-info-emphasis">Profession</h6>
                    <select class="form-select form-select-lg mb-3  text-info-emphasis" aria-label=".form-select-lg example" name="profession">
                        <option  value="Student" <%= profile.profession == 'Student' ? 'selected':'' %>>Student</option>
                        <option  value="Employed" <%= profile.profession == 'Employed' ? 'selected':'' %>>Employed</option>
                        <option  value="Self-Employed" <%= profile.profession == 'Self-Employed' ? 'selected':'' %>>Self-Employed</option>
    
                      </select>
                </div>
    
                
                <div class="mb-3">
                    <h6 class="text-info-emphasis">Profile </h6>
                    <div class="input-group">
                        <input type="file" class="form-control   rounded text-info-emphasis" name="profile">
                      </div>
                      <input type="text" name="old_image" value="<%= profile.image %>" hidden>
                </div>
    
                <div class="text-center">
                    <input type="submit" value="Update Profile" class="btn btn-primary">
                </div>
               </form>
    
            </div>
        </div>
    </div>
<% } %>
